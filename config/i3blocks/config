command=/usr/share/i3blocks/$BLOCK_NAME
separator_block_width=15
color=#F3F4F5
markup=none

[wifi]
label=
command=$HOME/config/config/i3blocks/wifi
instance=wlp2s0
interval=30

[volume-pulseaudio]
command=$HOME/config/i3blocks-contrib/volume-pulseaudio/volume-pulseaudio -F 3 -a -c "#ff0000"
interval=30
signal=1

[battery]
command=$HOME/config/i3blocks-contrib/battery/battery
markup=pango
interval=30

[time]
label=
command=date '+%Y-%m-%d %H:%M'
interval=5

[shutdown_menu]
full_text=
command=$HOME/config/i3blocks-contrib/shutdown_menu/shutdown_menu -c; echo 
